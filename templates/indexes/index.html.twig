{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block breadcrumb %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Главная</a></li>
            <li class="breadcrumb-item active">Индексы</li>
        </ol>
    </nav>

{% endblock %}

{% block body %}

    <div class="container">

        <form name="filterFreeFloat" method="post">
            <input type="hidden" name="setFilter" value="Y">

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="year">Дата начала:</label>
                    <input class="form-control datepicker" type="text" name="dateFrom" value="{{ filter.dateFrom }}">
                </div>
                <div class="form-group col-md-6">
                    <label for="year">Дата окончания:</label>
                    <input class="form-control datepicker" type="text" name="dateTo" value="{{ filter.dateTo }}">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <button type="submit" class="btn btn-primary">Применить</button>
                </div>
            </div>

        </form>

        <div class="top-menu">
            <a class="btn btn-secondary" href="/indexes/graph/">График с индексами</a>
        </div>

        <table class="table table-striped table-bordered table-hover pb-100">
            <thead class="thead-inverse">
            <tr>
                <th width="25%">Date</th>
                <th width="25%">Market Cap</th>
                <th width="25%">Index 8848</th>
                <th width="25%">Changes, %</th>
            </tr>
            </thead>
            <tbody>
            {% for indexItem in indexes %}
                <tr>
                    <td class="first-col">{{ indexItem.date }}</td>
                    <td>{{ indexItem.indexMarketCap }}</td>
                    <td>{{ indexItem.index8848TOP10 }}</td>
                    <td>{{ indexItem.prc }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}