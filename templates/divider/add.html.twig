{% extends 'base.html.twig' %}

{% block breadcrumb %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Главная</a></li>
            <li class="breadcrumb-item"><a href="/divider/">Список Divider</a></li>
            <li class="breadcrumb-item active">Добавление Divider</li>
        </ol>
    </nav>

{% endblock %}

{% block body %}

    <div class="container">

        <form name="addFreeFloat" method="post">
            <div class="form-group" style='margin-top:20px;'>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="year">Год:</label>
                        <select id="year" name="year" class="form-control">
                            <option {% if request.year == 2017 %}selected{% endif %} value="2017">2017</option>
                            <option {% if request.year == 2018 %}selected{% endif %} value="2018">2018</option>
                            <option {% if request.year == 2019 %}selected{% endif %} value="2019">2019</option>
                            <option {% if request.year == 2020 %}selected{% endif %} value="2020">2020</option>
                            <option value="2021">2021</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">

                        <label for="quarter">Квартал:</label>
                        <select id="quarter" name="quarter" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                        </select>
                    </div>
                </div>


                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="value">Значение:</label>
                        <input id="value" type="text" name="value" class="form-control">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </div>

            </div>

        </form>

    </div>

{% endblock %}