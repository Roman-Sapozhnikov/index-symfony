{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block breadcrumb %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Главная</a></li>
            <li class="breadcrumb-item active">Валюты</li>
        </ol>
    </nav>

{% endblock %}

{% block body %}

    <div class="container">

        <div class="row mt-5">

            <div class="top-menu">
                <a class="btn btn-secondary" href="/currency/add/">Добавить валюту</a>
            </div>

            <table class="table table-striped table-bordered table-hover pb-100">
                <thead class="thead-inverse">
                <tr>
                    <th>Name</th>
                    <th width="25%">Code</th>
                    <th width="25%">Path CoinMarketCap</th>
                    <th width="5%"></th>
                </tr>
                </thead>
                <tbody>
                {% for cur in currencies %}
                <tr>
                    <td class="first-col">
                        <div class="text-group">{{ cur.name }}</div>
                        <div class="input-group"><input name="name" class="form-control" type="text" value="{{ cur.name }}"></div>
                    </td>
                    <td>
                        <div class="text-group">{{ cur.code }}</div>
                        <div class="input-group"><input name="code" class="form-control" type="text" value="{{ cur.code }}"></div>
                    </td>
                    <td>
                        <div class="text-group">{{ cur.pathCmc }}</div>
                        <div class="input-group"><input name="pathCmc" class="form-control" type="text" value="{{ cur.pathCmc }}"></div>
                    </td>
                    <td class="edit">
                        <div class="text-group">
                            <svg class="bi bi-pencil" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M11.293 1.293a1 1 0 011.414 0l2 2a1 1 0 010 1.414l-9 9a1 1 0 01-.39.242l-3 1a1 1 0 01-1.266-1.265l1-3a1 1 0 01.242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z" clip-rule="evenodd"/>
                                <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 00.5.5H4v.5a.5.5 0 00.5.5H5v.5a.5.5 0 00.5.5H6v-1.5a.5.5 0 00-.5-.5H5v-.5a.5.5 0 00-.5-.5H3z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="input-group">
                            <svg class="bi bi-check-circle text-success" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M15.354 2.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3-3a.5.5 0 11.708-.708L8 9.293l6.646-6.647a.5.5 0 01.708 0z" clip-rule="evenodd"/>
                                <path fill-rule="evenodd" d="M8 2.5A5.5 5.5 0 1013.5 8a.5.5 0 011 0 6.5 6.5 0 11-3.25-5.63.5.5 0 11-.5.865A5.472 5.472 0 008 2.5z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <input class="form-control" type="hidden" name="id" value="{{ cur.id }}">
                    </td>
                </tr>
                {% endfor %}

                </tbody>
            </table>

        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    var entity = "currency";
{% endblock %}