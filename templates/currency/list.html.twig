{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="row mt-5">

            <div style='margin-top:20px;'>

                <table class="table table-striped table-bordered table-hover pb-100">
                    <thead class="thead-inverse">
                    <tr>
                        <th>Name</th>
                        <th width="25%">Code</th>
                        <th width="25%">Path CoinMarketCap</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cur in currencies %}
                    <tr>
                        <th scope="row">{{ cur.name }}</th>
                        <td>{{ cur.code }}</td>
                        <td>{{ cur.pathCmc }}</td>
                    <tr>
                        {% endfor %}
                    </tr>

                    </tbody>
                </table>

            </div>

        </div>

        <div class="row" style='margin:20px 0;'>
            <a href="/currency/add/">Добавить валюту</a>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}