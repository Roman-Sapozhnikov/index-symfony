{% extends 'base.html.twig' %}

{% block breadcrumb %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Главная</a></li>
            <li class="breadcrumb-item active">FreeFloat</li>
        </ol>
    </nav>

{% endblock %}

{% block body %}

    <div class="container">

        <div class="row mt-5">

            <div style='margin-top:20px;'>

                <form name="filterFreeFloat" method="post">
                    <input type="hidden" name="setFilter" value="Y">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="currency">Фильтр:</label>
                            <select name="cur_id" class="form-control">
                                <option value="0">Выберите валюту</option>
                                {% for cur in currency %}
                                    <option {% if cur.id == filter.cur_id %}selected{% endif %} value="{{ cur.id }}">{{ cur.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="year">Год:</label>
                            <select id="year" name="year" class="form-control">
                                <option value="0">Все</option>
                                <option {% if filter.year == 2017 %}selected{% endif %} value="2017">2017</option>
                                <option {% if filter.year == 2018 %}selected{% endif %} value="2018">2018</option>
                                <option {% if filter.year == 2019 %}selected{% endif %} value="2019">2019</option>
                                <option {% if filter.year == 2020 %}selected{% endif %} value="2020">2020</option>
                                <option value="2021">2021</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">

                            <label for="quarter">Квартал:</label>
                            <select id="quarter" name="quarter" class="form-control">
                                <option value="0">Все</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary">Применить</button>
                        </div>
                    </div>

                </form>


                <div class="top-menu">
                    <a class="btn btn-secondary" href="/freeFloat/add/">Добавить Free Float</a>
                </div>


                <table class="table table-striped table-bordered table-hover pb-100">
                    <thead class="thead-inverse">
                    <tr>
                        <th width="25%">Currency</th>
                        <th width="25%">Year</th>
                        <th width="25%">Quarter</th>
                        <th width="25%">Value</th>
                        <th width="5%"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ff in freeFloats %}
                        <tr>
                            <td class="first-col">{{ ff.curName }}</td>
                            <td>
                                <div class="text-group">{{ ff.year }}</div>
                                <div class="input-group">
                                    <select id="year" name="year" class="form-control">
                                        <option {% if ff.year == 2017 %}selected{% endif %} value="2017">2017</option>
                                        <option {% if ff.year == 2018 %}selected{% endif %} value="2018">2018</option>
                                        <option {% if ff.year == 2019 %}selected{% endif %} value="2019">2019</option>
                                        <option {% if ff.year == 2020 %}selected{% endif %} value="2020">2020</option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div class="text-group">{{ ff.quarter }}</div>
                                <div class="input-group">
                                    <select id="quarter" name="quarter" class="form-control">
                                        <option {% if ff.quarter == 1 %}selected{% endif %} value="1">1</option>
                                        <option {% if ff.quarter == 2 %}selected{% endif %} value="2">2</option>
                                        <option {% if ff.quarter == 3 %}selected{% endif %} value="3">3</option>
                                        <option {% if ff.quarter == 4 %}selected{% endif %} value="4">4</option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div class="text-group">{{ ff.value }}</div>
                                <div class="input-group"><input name="value" class="form-control" type="text" value="{{ ff.value }}"></div>
                            </td>
                            <td class="edit">
                                <div class="text-group">
                                    <svg class="bi bi-pencil" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M11.293 1.293a1 1 0 011.414 0l2 2a1 1 0 010 1.414l-9 9a1 1 0 01-.39.242l-3 1a1 1 0 01-1.266-1.265l1-3a1 1 0 01.242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z" clip-rule="evenodd"/>
                                        <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 00.5.5H4v.5a.5.5 0 00.5.5H5v.5a.5.5 0 00.5.5H6v-1.5a.5.5 0 00-.5-.5H5v-.5a.5.5 0 00-.5-.5H3z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div class="input-group">
                                    <svg class="bi bi-check-circle text-success" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M15.354 2.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3-3a.5.5 0 11.708-.708L8 9.293l6.646-6.647a.5.5 0 01.708 0z" clip-rule="evenodd"/>
                                        <path fill-rule="evenodd" d="M8 2.5A5.5 5.5 0 1013.5 8a.5.5 0 011 0 6.5 6.5 0 11-3.25-5.63.5.5 0 11-.5.865A5.472 5.472 0 008 2.5z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <input class="form-control" type="hidden" name="id" value="{{ ff.id }}">
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>

        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    var entity = "freeFloat";
{% endblock %}