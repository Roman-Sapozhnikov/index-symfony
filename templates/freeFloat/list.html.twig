{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="row mt-5">

            <div style='margin-top:20px;'>

                <table class="table table-striped table-bordered table-hover pb-100">
                    <thead class="thead-inverse">
                    <tr>
                        <th width="25%">Currency</th>
                        <th width="25%">Year</th>
                        <th width="25%">Quarter</th>
                        <th width="25%">Value</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ff in freeFloats %}
                        <tr>
                            <th scope="row">{{ ff.curName }}</th>
                            <td>{{ ff.year }}</td>
                            <td>{{ ff.quarter }}</td>
                            <td>{{ ff.value }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>

        </div>

        <div class="row" style='margin:20px 0;'>
            <a href="/currency/add/">Добавить валюту</a>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}